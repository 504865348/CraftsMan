<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/horizontal_split_20"/>

    <RelativeLayout
        android:id="@+id/my_info_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/ll_click_selector">

        <ImageView
            android:id="@+id/my_info_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/my_info_picture"/>

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/my_info_picture">

            <TextView
                android:id="@+id/my_info_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="用户名"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/my_info"
                    android:text="关注："/>

                <TextView
                    android:id="@+id/my_info_following"
                    style="@style/my_info"
                    android:text="0"/>

                <TextView
                    style="@style/my_info"
                    android:layout_marginLeft="20dp"
                    android:text="粉丝："/>

                <TextView
                    android:id="@+id/my_info_followers"
                    style="@style/my_info"
                    android:text="0"/>

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_more" />

    </RelativeLayout>

    <View style="@style/horizontal_split_20"/>

</LinearLayout>