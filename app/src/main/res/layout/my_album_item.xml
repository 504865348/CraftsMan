<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/myAlbum_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="340dp"
        android:src="@drawable/delete" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/myAlbum_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/album_detail_cover"
            android:layout_marginLeft="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/myAlbum_pic"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/myAlbum_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="专辑名字"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <TextView
                    style="@style/album_detail_intro_small"
                    android:text="简介"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <TextView
                    style="@style/album_detail_intro_small"
                    android:text="共"/>
                <TextView
                    style="@style/album_detail_intro_small"
                    android:id="@+id/myAlbum_pro_number"
                    android:text="XX"/>
                <TextView
                    style="@style/album_detail_intro_small"
                    android:text="集"/>
                <TextView
                    style="@style/album_detail_intro_small"
                    android:layout_marginLeft="10dp"
                    android:text="共"/>
                <TextView
                    style="@style/album_detail_intro_small"
                    android:id="@+id/myAlbum_storage"
                    android:text="XX"/>
                <TextView
                    style="@style/album_detail_intro_small"
                    android:text="M"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>