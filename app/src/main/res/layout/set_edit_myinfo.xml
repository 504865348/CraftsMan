<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/edit_my_info_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:navigationIcon="@drawable/back">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="编辑资料"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <View style="@style/horizontal_split_wide" />

    <LinearLayout
        android:id="@+id/head_image"
        style="@style/my_info_linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="头像"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/my_info_picture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="260dp"
            android:src="@drawable/my_info_picture" />
    </LinearLayout>

    <View style="@style/horizontal_split"/>

    <LinearLayout
        style="@style/my_info_linear">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="16dp"
            android:text="昵称" />

        <EditText
            android:id="@+id/etNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:background="@color/white"
            android:hint="小码"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/horizontal_split"/>

    <LinearLayout
        style="@style/my_info_linear">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="简介"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/etIntroduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:background="@color/white"
            android:hint="致力于房屋建筑的研究工作"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/horizontal_split"/>

    <LinearLayout
        style="@style/my_info_linear">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="性别"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:background="@color/white"
            android:hint="男"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/horizontal_split"/>

    <LinearLayout
        style="@style/my_info_linear">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="生日"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/etBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:background="@color/white"
            android:hint="20171111"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/horizontal_split"/>

    <LinearLayout
        android:id="@+id/ensure_psw"
        style="@style/my_info_linear">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="地区"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:background="@color/white"
            android:hint="江苏镇江"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <View style="@style/horizontal_split"/>

    <Button
        android:id="@+id/my_info_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/red"
        android:text="确定"
        android:textSize="16dp" />

</LinearLayout>