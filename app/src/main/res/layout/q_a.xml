<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问答-听专业解答"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:id="@+id/q_a_download"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:background="@drawable/ll_click_selector"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/download1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/q_a_history"
            android:layout_toLeftOf="@id/q_a_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/ll_click_selector"
            android:gravity="center">
            <ImageView
                android:id="@+id/main_image_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/history1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史"
                android:textSize="10sp"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/main_text_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/search_icon"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/title_background_selector"
        android:clickable="true"
        android:text="搜问题搜工匠"
        android:textSize="12sp"/>

    <include layout="@layout/q_a_classification"/>

    <View style="@style/horizontal_split_wide"/>

    <include layout="@layout/q_a_super_famous_latest"/>

    <View style="@style/horizontal_split_wide"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/q_a_list_view_examples"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>