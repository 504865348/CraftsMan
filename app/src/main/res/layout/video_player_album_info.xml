<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/video_player_album_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/album_cover"/>
        <TextView
            android:id="@+id/video_player_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="15sp"
            android:text="专辑标题"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_player_album_subname"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="专辑分集标题"/>
        <ImageView
            android:id="@+id/video_player_btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_buy"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp">

        <TextView
            style="@style/video_player_info_text"
            android:text="播放量: "/>

        <TextView
            android:id="@+id/video_player_times"
            style="@style/video_player_info_text"
            android:text="XXX"/>

        <TextView
            style="@style/video_player_info_text"
            android:layout_marginLeft="30dp"
            android:text="发布时间: "/>

        <TextView
            android:id="@+id/video_player_publish_time"
            style="@style/video_player_info_text"
            android:text="XXX"/>
    </LinearLayout>

</LinearLayout>