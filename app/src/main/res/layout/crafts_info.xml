<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/crafts_image_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:src="@drawable/crafts_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/crafts_image_icon"
            android:layout_toRightOf="@+id/crafts_image_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/crafts_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/crafts_text_introduction"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/light_blue"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="14dp">
        <Button
            android:id="@+id/crafts_image_follow"
            android:layout_width="124dp"
            android:layout_height="25dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/check_border"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:text="关注(0)" />
        <Button
            android:id="@+id/crafts_image_ask"
            android:layout_width="124dp"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/check_border"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:text="向TA提问" />
    </LinearLayout>

</LinearLayout>
