<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ToolBar（含返回按钮） -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/friends_back">
        <TextView
            android:id="@+id/crafts_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:text="姓名"/>
    </android.support.v7.widget.Toolbar>


    <View style="@style/horizontal_split"/>

    <!-- 工匠信息 -->
    <include layout="@layout/crafts_info"/>

    <View style="@style/horizontal_split"/>

    <RadioGroup
        android:id="@+id/crafts_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/crafts_rb_album"
            android:textSize="24sp"
            android:text="专辑"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@android:color/transparent"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/crafts_rb_q_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:gravity="center_horizontal"
            android:text="问答"
            android:textColor="@android:color/black"
            android:textSize="24sp"/>

    </RadioGroup>

    <View style="@style/horizontal_split"/>

    <FrameLayout
        android:id="@+id/crafts_section_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>