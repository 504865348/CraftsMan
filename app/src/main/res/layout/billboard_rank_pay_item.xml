<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/billboard_pay"
        style="@style/billboard_linear">
        <ImageView
            android:id="@+id/billboard_pay_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/billboard_pay_img"
            android:orientation="vertical"
            android:id="@+id/linearLayout2">
            <TextView
                android:id="@+id/billboard_pay_name"
                style="@style/search_interface_sub_title" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray_text"
                android:textSize="10sp" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray_text"
                android:textSize="10sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="82dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/billboard_pay_program1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/light_gray_text"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="82dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/billboard_pay_program2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:textColor="@color/light_gray_text"
                android:textSize="10sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/billboard_pay_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_big"
            android:layout_alignBottom="@+id/linearLayout2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
