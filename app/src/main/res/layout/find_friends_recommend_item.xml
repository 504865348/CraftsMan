<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/friends_recommend_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/friends_icon"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/friends_recommend_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/black"
        android:text="工匠名"
        android:layout_toRightOf="@id/friends_recommend_img"/>
    <ImageView
        android:id="@+id/friends_recommend_v"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/find_v"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="3dp" />
    <ImageView
        android:id="@+id/friends_recommend_plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/plus_attention"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/friends_recommend_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简介简介简介简介简介简介简介简介"
        android:textSize="14sp"
        android:layout_below="@id/friends_recommend_img"
        android:layout_alignLeft="@id/friends_recommend_name"/>

</RelativeLayout>