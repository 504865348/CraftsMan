<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/album_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="325dp"

        android:src="@drawable/video_player_share"
        />
    <!-- 专辑信息 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/album_detail_cover"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/album_detail_cover"
            android:layout_marginLeft="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp" />

        <LinearLayout
            android:id="@+id/album_detail_ll_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/album_detail_cover"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/album_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="专辑名字"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <TextView
                    style="@style/album_detail_intro_small"
                    android:text="工匠："/>
                <TextView
                    style="@style/album_detail_intro_small"
                    android:id="@+id/album_detail_crafts_name"
                    android:text="XXX"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <TextView
                    style="@style/album_detail_intro_small"
                    android:text="分类："/>
                <TextView
                    style="@style/album_detail_intro_small"
                    android:id="@+id/album_detail_classification"
                    android:text="XXX"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <TextView
                    style="@style/album_detail_intro_small"
                    android:text="播放量："/>
                <TextView
                    style="@style/album_detail_intro_small"
                    android:id="@+id/album_detail_play_num"
                    android:text="XXX"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/album_detail_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="95dp"
            android:src="@drawable/btn_album_detail_subscribe"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignTop="@+id/album_detail_subscribe"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                style="@style/album_detail_intro_small"
                android:textColor="@color/red"
                android:id="@+id/subscribe_times"
                android:text="xx"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/album_detail_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:src="@drawable/btn_album_detail_buy"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>