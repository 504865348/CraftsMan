<?xml version="1.0" encoding="utf-8"?>

<!-- 主界面公共底部导航栏 -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/main_rg_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <RadioButton
            android:id="@+id/main_rb_home_page"
            style="@style/Main_RadioButton"
            android:drawableTop="@drawable/main_rb_home_page_selector" />

        <RadioButton
            android:id="@+id/main_rb_billboard"
            style="@style/Main_RadioButton"
            android:drawableTop="@drawable/main_rb_billboard_selector" />

        <RadioButton
            android:id="@+id/main_rb_question"
            style="@style/Main_RadioButton"
            android:drawableTop="@drawable/main_rb_question_selector" />

        <RadioButton
            android:id="@+id/main_rb_discover"
            style="@style/Main_RadioButton"
            android:drawableTop="@drawable/main_rb_discover_selector" />

        <RadioButton
            android:id="@+id/main_rb_my_info"
            style="@style/Main_RadioButton"
            android:drawableTop="@drawable/main_rb_my_info_selector" />
    </RadioGroup>

</LinearLayout>