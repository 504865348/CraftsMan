<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <View style="@style/horizontal_split"/>

    <ImageView
        android:id="@+id/question_answer_crafts_img"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/friends_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/question_answer_crafts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:text="工匠名"
        android:layout_toRightOf="@+id/question_answer_crafts_img"
        android:layout_toEndOf="@+id/question_answer_crafts_img" />

    <ImageView
        android:id="@+id/question_answer_crafts_v"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/find_v"
        android:layout_toRightOf="@+id/question_answer_crafts_name"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/question_answer_crafts_ask"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@drawable/check_border"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:layout_alignParentRight="true"
        android:text="向TA提问" />

    <TextView
        android:id="@+id/question_answer_crafts_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简介简介简介简介简介简介"
        android:textSize="14sp"
        android:layout_below="@+id/question_answer_crafts_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/question_answer_crafts_img"
        android:layout_toEndOf="@+id/question_answer_crafts_img"
        />

</RelativeLayout>