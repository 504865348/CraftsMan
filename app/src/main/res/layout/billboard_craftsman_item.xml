<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/billboard_craftsman_rank"
            style="@style/search_interface_sub_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="1" />
        <ImageView
            android:id="@+id/billboard_craftsman_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/column_cover" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/billboard_craftsman_img"
            android:orientation="vertical">
            <TextView
                android:id="@+id/billboard_craftsman_name"
                style="@style/search_interface_sub_title"
                android:text="工匠名" />
            <TextView
                android:id="@+id/billboard_craftsman_introduction"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="工匠简介工匠简介工匠简介工匠简介"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/horizontal_split"/>

</LinearLayout>



